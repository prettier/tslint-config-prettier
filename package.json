{
  "name": "tslint-config-prettier",
  "version": "0.0.0-development",
  "description": "Do you wanna use tslint and prettier without conflicts? tslint-config-prettier disables all conflicting rules that may cause such problems. Prettier takes care of formatting and tslint the rest.",
  "keywords": [
    "lint",
    "tslint",
    "ts-lint",
    "prettier",
    "config",
    "typescript"
  ],
  "files": [
    "lib/index.json"
  ],
  "main": "lib/index.json",
  "author": "Alex Jover Morales <alexjovermorales@gmail.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/alexjoverm/tslint-config-prettier.git"
  },
  "license": "MIT",
  "engines": {
    "node": ">=4.0.0"
  },
  "scripts": {
    "prepublish": "npm run build-tools && npm run generate-config",
    "lint": "tslint 'tools/**'",
    "test": "npm run clean && jest --no-cache",
    "clean": "rimraf ./node_modules/vrsource-tslint-rules/rules/*.ts",
    "build-tools": "tsc",
    "generate-config": "node ./build/generate.js",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post",
    "semantic-release-prepare": "node tools/semantic-release-prepare",
    "commit": "git-cz",
    "prepush": "npm run test",
    "commitmsg": "validate-commit-msg"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    },
    "validate-commit-msg": {
      "types": "conventional-commit-types",
      "helpMessage": "Use \"npm run commit\" instead, we use conventional-changelog format :) (https://github.com/commitizen/cz-cli)"
    }
  },
  "jest": {
    "testEnvironment": "node",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ],
    "testMatch": [
      "**/test.{ts,tsx}"
    ],
    "transform": {
      "\\.tsx?$": "<rootDir>/build/transform.js"
    }
  },
  "devDependencies": {
    "@types/jest": "^20.0.8",
    "@types/make-dir": "^1.0.1",
    "@types/node": "^8.0.25",
    "@types/prettier": "^1.5.0",
    "codelyzer": "3.1.2",
    "commitizen": "^2.9.5",
    "cz-conventional-changelog": "^2.0.0",
    "husky": "^0.13.1",
    "jest": "^20.0.1",
    "lodash": "^4.17.4",
    "make-dir": "^1.0.0",
    "prettier": "1.5.3",
    "rimraf": "^2.6.1",
    "semantic-release": "^6.3.6",
    "tslint": "5.7.0",
    "tslint-consistent-codestyle": "1.6.0",
    "tslint-divid": "1.0.4",
    "tslint-eslint-rules": "4.1.1",
    "tslint-immutable": "4.0.2",
    "tslint-microsoft-contrib": "5.0.1",
    "tslint-misc-rules": "3.1.3",
    "tslint-plugin-ikatyang": "1.0.0",
    "tslint-react": "3.2.0",
    "typescript": "2.4.2",
    "validate-commit-msg": "^2.10.1",
    "vrsource-tslint-rules": "5.1.1"
  }
}
